<%- include('_head', { title: 'N8N Requests', active: 'n8n-requests' }) %>
<%- include('_flash', { success: success, error: error }) %>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="bg-blue-600 text-white px-4 py-2 flex justify-between items-center">
    <h3 class="font-semibold">N8N Requests Log</h3>
    <div class="flex space-x-2">
      <button id="refreshBtn" class="bg-blue-700 hover:bg-blue-800 text-white px-3 py-1 rounded text-sm transition">
        Refresh
      </button>
      <button id="clearBtn" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm transition">
        Clear All
      </button>
    </div>
  </div>
  <div class="p-4">
    <% if (requests && requests.length > 0) { %>
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead>
            <tr class="border-b">
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">ID</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Nama</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Email</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">WhatsApp</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Tanggal</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Status</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% requests.forEach(function(request) { %>
              <tr class="border-b hover:bg-gray-50">
                <td class="px-4 py-2 text-sm font-mono"><%= request.id %></td>
                <td class="px-4 py-2 text-sm"><%= request.name %></td>
                <td class="px-4 py-2 text-sm"><%= request.email %></td>
                <td class="px-4 py-2 text-sm"><%= request.phoneNumber %></td>
                <td class="px-4 py-2 text-sm"><%= request.createdAt ? new Date(request.createdAt).toLocaleString('id-ID') : '-' %></td>
                <td class="px-4 py-2 text-sm">
                  <span class="px-2 py-1 rounded text-xs <%= request.status === 'completed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= request.status || 'pending' %>
                  </span>
                </td>
                <td class="px-4 py-2 text-sm">
                  <% if (request.status !== 'completed') { %>
                  <button type="button" class="px-3 py-1 text-xs bg-green-600 hover:bg-green-700 text-white rounded complete-btn" data-id="<%= request.id %>">
                    Selesai
                    </button>
                  <% } else { %>
                  <span class="text-xs text-gray-500">Sudah selesai</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-gray-500 text-center py-4">Belum ada request yang tercatat</p>
    <% } %>
  </div>
</div>

<!-- Complete Modal -->
<div id="completeModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
  <div class="bg-white rounded-lg max-w-md w-full mx-4 overflow-hidden">
    <div class="flex justify-between items-center p-4 border-b">
      <h4 class="text-lg font-semibold">Selesaikan Request N8n</h4>
      <button id="closeCompleteModal" class="text-gray-500 hover:text-gray-700">âœ•</button>
    </div>
    <div class="p-4 space-y-3">
      <input type="hidden" id="completeId">
      <div>
        <label class="block text-sm text-gray-700 mb-1">URL N8n</label>
        <input type="text" id="n8nUrl" class="w-full px-3 py-2 border rounded" placeholder="https://n8n.domain.com" />
      </div>
      <div>
        <label class="block text-sm text-gray-700 mb-1">Username</label>
        <input type="text" id="n8nUser" class="w-full px-3 py-2 border rounded" />
      </div>
      <div>
        <label class="block text-sm text-gray-700 mb-1">Password</label>
        <input type="text" id="n8nPass" class="w-full px-3 py-2 border rounded" />
      </div>
      <div>
        <label class="block text-sm text-gray-700 mb-1">Catatan (opsional)</label>
        <textarea id="n8nNote" class="w-full px-3 py-2 border rounded" rows="3" placeholder="Catatan tambahan"></textarea>
      </div>
      <div class="flex justify-end gap-2 pt-2">
        <button id="cancelComplete" class="px-3 py-1 rounded border">Batal</button>
        <button id="submitComplete" class="px-3 py-1 rounded bg-green-600 hover:bg-green-700 text-white">Kirim & Tandai Selesai</button>
      </div>
    </div>
  </div>
</div>

<%- include('_foot') %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Refresh button
  document.getElementById('refreshBtn').addEventListener('click', function() {
    location.reload();
  });
  
  // Clear all button
  document.getElementById('clearBtn').addEventListener('click', async function() {
    if (confirm('Yakin ingin menghapus semua request log?')) {
      try {
        const response = await fetch('/api/n8n-requests', {
          method: 'DELETE'
        });
        
        if (response.ok) {
          location.reload();
        } else {
          alert('Gagal menghapus request log');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Terjadi kesalahan');
      }
    }
  });
  
  // Complete flow handlers
  const openModal = (id) => {
    document.getElementById('completeId').value = id;
    document.getElementById('completeModal').classList.remove('hidden');
    document.getElementById('completeModal').classList.add('flex');
  };
  const closeModal = () => {
    document.getElementById('completeModal').classList.add('hidden');
    document.getElementById('completeModal').classList.remove('flex');
  };

  document.querySelectorAll('.complete-btn').forEach(btn => {
    btn.addEventListener('click', () => openModal(btn.dataset.id));
  });
  document.getElementById('closeCompleteModal').addEventListener('click', closeModal);
  document.getElementById('cancelComplete').addEventListener('click', closeModal);
  document.getElementById('completeModal').addEventListener('click', function(e) { if (e.target === this) closeModal(); });

  document.getElementById('submitComplete').addEventListener('click', async function() {
    const id = document.getElementById('completeId').value;
    const n8nUrl = document.getElementById('n8nUrl').value.trim();
    const username = document.getElementById('n8nUser').value.trim();
    const password = document.getElementById('n8nPass').value.trim();
    const note = document.getElementById('n8nNote').value.trim();

    if (!n8nUrl || !username || !password) {
      alert('Mohon isi URL, username, dan password');
      return;
    }

    try {
      const resp = await fetch(`/admin/n8n/${id}/complete`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ n8nUrl, username, password, note })
      });
      const data = await resp.json();
      if (data.success) {
        closeModal();
        location.reload();
      } else {
        alert(data.message || 'Gagal menandai selesai');
      }
    } catch (e) {
      alert(e.message);
    }
  });
});
</script>