<%- include('_head', { title: 'Konfigurasi', active: active }) %>

<div class="min-h-screen bg-gray-100">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <h1 class="text-xl font-semibold text-gray-900">Konfigurasi Sistem</h1>
        <div class="space-x-4">
          <a href="/admin/dashboard" class="text-gray-600 hover:text-gray-900">Dashboard</a>
          <a href="/admin/users" class="text-gray-600 hover:text-gray-900">Users</a>
          <a href="/admin/requests" class="text-gray-600 hover:text-gray-900">Requests</a>
          <a href="/admin/promotions" class="text-gray-600 hover:text-gray-900">Promotions</a>
          <a href="/admin/n8n-requests" class="text-gray-600 hover:text-gray-900">N8N</a>
          <a href="/admin/server-templates" class="text-gray-600 hover:text-gray-900">Templates</a>
          <a href="/admin/config" class="text-blue-600 font-medium">Config</a>
          <a href="/admin/logout" class="text-red-600 hover:text-red-800">Logout</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Flash messages -->
  <%- include('_flash') %>

  <!-- Main content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="bg-blue-600 text-white px-4 py-2">
        <h3 class="font-semibold">Pengaturan Sistem</h3>
      </div>
      <div class="p-4">
        <form action="/admin/config" method="POST" class="space-y-4">
          <!-- Info Panel -->
          <div class="bg-blue-50 p-4 rounded-lg border border-blue-200">
            <h4 class="text-lg font-medium text-blue-900 mb-2">ðŸ“‹ Informasi Konfigurasi</h4>
            <p class="text-blue-700">
              <strong>Panel URL & API Key:</strong> Dikonfigurasi di file <code>.env</code><br>
              <strong>Template Server:</strong> Dikonfigurasi di form ini (CPU, RAM, Disk, Egg ID, dll)
            </p>
          </div>

          <!-- WhatsApp Configuration -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-lg font-medium text-gray-900 mb-4">WhatsApp Bot</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-gray-700 font-medium mb-2">Admin Number</label>
                <input type="text" name="whatsapp.admin_number" value="<%= config.whatsapp?.admin_number || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="62812345678" required />
              </div>
              <div>
                <label class="block text-gray-700 font-medium mb-2">Group ID</label>
                <input type="text" name="whatsapp.group_id" value="<%= config.whatsapp?.group_id || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="120363..." />
              </div>
            </div>
          </div>

          <!-- Server Configuration -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-lg font-medium text-gray-900 mb-4">Server Settings</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-gray-700 font-medium mb-2">Port</label>
                <input type="number" name="server.port" value="<%= config.server?.port || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="3000" required />
              </div>
              <div>
                <label class="block text-gray-700 font-medium mb-2">Bot URL</label>
                <input type="text" name="bot_url" value="<%= config.bot_url || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="http://localhost:3001" required />
              </div>
              <div>
                <label class="block text-gray-700 font-medium mb-2">Admin Session Secret</label>
                <input type="text" name="server.admin_session_secret" value="<%= config.server?.admin_session_secret || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
              </div>
            </div>
          </div>

          <!-- Email Configuration -->
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-lg font-medium text-gray-900 mb-4">Email Settings</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-gray-700 font-medium mb-2">SMTP Host</label>
                <input type="text" name="email.smtp_host" value="<%= config.email?.smtp_host || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="smtp.gmail.com" />
              </div>
              <div>
                <label class="block text-gray-700 font-medium mb-2">SMTP Port</label>
                <input type="number" name="email.smtp_port" value="<%= config.email?.smtp_port || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="587" />
              </div>
              <div>
                <label class="block text-gray-700 font-medium mb-2">SMTP User</label>
                <input type="email" name="email.smtp_user" value="<%= config.email?.smtp_user || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="user@domain.com" />
              </div>
              <div>
                <label class="block text-gray-700 font-medium mb-2">SMTP Password</label>
                <input type="password" name="email.smtp_password" value="<%= config.email?.smtp_password || '' %>" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
              </div>
            </div>
          </div>

          <div>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition">Simpan Konfigurasi</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('_foot') %>