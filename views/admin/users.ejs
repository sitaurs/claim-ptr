<%- include('_head', { title: 'Kelola Pengguna', active: 'users' }) %>
<%- include('_flash', { success: success, error: error }) %>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="bg-blue-600 text-white px-4 py-2 flex justify-between items-center">
    <h3 class="font-semibold">Daftar Pengguna</h3>
    <div class="flex space-x-2">
      <form action="/admin/users/sync" method="POST" class="inline">
        <button type="submit" class="bg-blue-700 hover:bg-blue-800 text-white px-3 py-1 rounded text-sm transition">
          Sinkronisasi
        </button>
      </form>
      <button id="refreshBtn" class="bg-blue-700 hover:bg-blue-800 text-white px-3 py-1 rounded text-sm transition">
        Refresh
      </button>
    </div>
  </div>
  <div class="p-4">
    <% if (users && users.length > 0) { %>
      <div class="overflow-x-auto">
        <table class="min-w-full">
          <thead>
            <tr class="border-b">
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">No</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Nama</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Nomor</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Status</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Tanggal Daftar</th>
              <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(user, index) { %>
              <tr class="border-b hover:bg-gray-50">
                <td class="px-4 py-2 text-sm"><%= index + 1 %></td>
                <td class="px-4 py-2 text-sm"><%= user.name || '-' %></td>
                <td class="px-4 py-2 text-sm"><%= user.phone || '-' %></td>
                <td class="px-4 py-2 text-sm">
                  <span class="px-2 py-1 rounded-full text-xs <%= user.status === 'verified' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= user.status === 'verified' ? 'Terverifikasi' : 'Pending' %>
                  </span>
                </td>
                <td class="px-4 py-2 text-sm"><%= user.createdAt ? new Date(user.createdAt).toLocaleDateString('id-ID') : '-' %></td>
                <td class="px-4 py-2 text-sm">
                  <div class="flex space-x-2">
                    <% if (user.status !== 'verified') { %>
                      <button 
                        type="button" 
                        class="px-2 py-1 rounded text-xs bg-green-100 text-green-800 hover:bg-green-200 transition btn-verify"
                        data-phone="<%= user.phone %>"
                      >
                        Verifikasi
                      </button>
                    <% } %>
                    <button 
                      type="button" 
                      class="px-2 py-1 rounded text-xs bg-red-100 text-red-800 hover:bg-red-200 transition btn-delete"
                      data-phone="<%= user.phone %>"
                    >
                      Hapus
                    </button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-gray-500 text-center py-4">Belum ada pengguna yang terdaftar</p>
    <% } %>
  </div>
</div>

<%- include('_foot') %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Refresh button
  document.getElementById('refreshBtn').addEventListener('click', function() {
    location.reload();
  });
  
  // Verify user
  document.querySelectorAll('.btn-verify').forEach(button => {
    button.addEventListener('click', async function() {
      const phone = this.dataset.phone;
      
      if (confirm('Yakin ingin memverifikasi pengguna ini?')) {
        try {
          const response = await fetch(`/api/users/${phone}/verify`, {
            method: 'POST'
          });
          
          if (response.ok) {
            location.reload();
          } else {
            alert('Gagal memverifikasi pengguna');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Terjadi kesalahan');
        }
      }
    });
  });
  
  // Delete user
  document.querySelectorAll('.btn-delete').forEach(button => {
    button.addEventListener('click', async function() {
      const phone = this.dataset.phone;
      
      if (confirm('Yakin ingin menghapus pengguna ini?')) {
        try {
          const response = await fetch(`/api/users/${phone}`, {
            method: 'DELETE'
          });
          
          if (response.ok) {
            location.reload();
          } else {
            alert('Gagal menghapus pengguna');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Terjadi kesalahan');
        }
      }
    });
  });
});
</script>