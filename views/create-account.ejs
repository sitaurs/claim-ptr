<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buat Akun - MOOTERACT HUB</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <header class="bg-blue-600 text-white shadow-md">
    <div class="container mx-auto px-4 py-6">
      <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold">MOOTERACT HUB</h1>
        <nav>
          <ul class="flex space-x-6">
            <li><a href="/" class="hover:text-blue-200 transition">Beranda</a></li>
            <li><a href="/claim" class="hover:text-blue-200 transition">Klaim Server</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>

  <main class="container mx-auto px-4 py-12">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden">
      <div class="bg-blue-600 text-white py-4 px-6">
        <h2 class="text-2xl font-bold">Buat Akun</h2>
        <p class="text-blue-100">Langkah 3: Buat Akun Panel</p>
      </div>
      
      <div class="p-6">
        <p class="text-gray-600 mb-6">Buat akun untuk mengakses panel Pterodactyl Anda.</p>
        
        <form id="accountForm" class="space-y-4">
          <input type="hidden" id="phoneNumber" value="<%= phone %>">
          
          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="Masukkan email Anda" 
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
            >
          </div>
          
          <div>
            <label for="firstName" class="block text-gray-700 font-medium mb-2">Nama Depan</label>
            <input 
              type="text" 
              id="firstName" 
              name="firstName" 
              placeholder="Nama depan" 
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
            >
          </div>
          
          <div>
            <label for="lastName" class="block text-gray-700 font-medium mb-2">Nama Belakang</label>
            <input 
              type="text" 
              id="lastName" 
              name="lastName" 
              placeholder="Nama belakang" 
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
            >
          </div>
          
          <div>
            <label for="password" class="block text-gray-700 font-medium mb-2">Password</label>
            <input 
              type="password" 
              id="password" 
              name="password" 
              placeholder="Minimal 8 karakter" 
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
              minlength="8"
            >
          </div>
          
          <div>
            <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Konfirmasi Password</label>
            <input 
              type="password" 
              id="confirmPassword" 
              name="confirmPassword" 
              placeholder="Ketik ulang password" 
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
              minlength="8"
            >
          </div>
          
          <div>
            <button 
              type="submit" 
              id="createAccountBtn"
              class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition"
            >
              Buat Akun
            </button>
          </div>
        </form>
        
        <div id="loadingIndicator" class="hidden mt-4 text-center">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-blue-600"></div>
          <p class="mt-2 text-gray-600">Membuat akun...</p>
        </div>
        
        <div id="errorMessage" class="hidden mt-4 p-3 bg-red-100 text-red-700 rounded-lg"></div>
      </div>
    </div>
  </main>

  <footer class="bg-gray-800 text-white py-8 mt-12">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <h2 class="text-2xl font-bold">MOOTERACT HUB</h2>
          <p class="text-gray-400">Platform untuk klaim server gratis</p>
        </div>
        <div>
          <p>&copy; <%= new Date().getFullYear() %> MOOTERACT HUB. All rights reserved.</p>
        </div>
      </div>
    </div>
  </footer>

  <script>
    document.getElementById('accountForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const phoneNumber = document.getElementById('phoneNumber').value;
      const email = document.getElementById('email').value;
      const firstName = document.getElementById('firstName').value;
      const lastName = document.getElementById('lastName').value;
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      
      const loadingIndicator = document.getElementById('loadingIndicator');
      const errorMessage = document.getElementById('errorMessage');
      const createAccountBtn = document.getElementById('createAccountBtn');
      
      // Validasi password
      if (password !== confirmPassword) {
        errorMessage.textContent = 'Password dan konfirmasi password tidak cocok.';
        errorMessage.classList.remove('hidden');
        return;
      }
      
      // Validasi email
      if (!email.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/)) {
        errorMessage.textContent = 'Format email tidak valid.';
        errorMessage.classList.remove('hidden');
        return;
      }
      
      // Sembunyikan pesan error jika ada
      errorMessage.classList.add('hidden');
      
      // Tampilkan loading
      loadingIndicator.classList.remove('hidden');
      createAccountBtn.disabled = true;
      
      try {
        // Lanjut ke halaman pembuatan server
        window.location.href = `/create-server?phone=${phoneNumber}&email=${encodeURIComponent(email)}&firstName=${encodeURIComponent(firstName)}&lastName=${encodeURIComponent(lastName)}&password=${encodeURIComponent(password)}`;
      } catch (error) {
        console.error('Error:', error);
        errorMessage.textContent = 'Terjadi kesalahan. Silakan coba lagi nanti.';
        errorMessage.classList.remove('hidden');
        
        // Sembunyikan loading
        loadingIndicator.classList.add('hidden');
        createAccountBtn.disabled = false;
      }
    });
  </script>
</body>
</html>